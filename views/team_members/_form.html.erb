<%= form_for([@project,@project.team_members.build]) do |form| %>
<% if @team_member.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@team_member.errors.count, "error") %> Listed Below:
  </h2>

  <ul>
    <% @team_member.errors.full_messages.each do |err_msg| %>
    <li>
      <%= err_msg %>
    </li>
    <% end %>
  </ul>
</div>
<% end %>
<p class="show_details">
  <%= form.label :Add Team Member %><br />
  <%= form.text_field :member_name %>
</p>
<p class="show_details">
  <%= form.submit%>
</p>
<% end%>